#!/usr/bin/env bash
npm update

pkgs=(
    csscomb
    gulp
    jshint
    hicat
    vtop
    bower
    jscs
    svgo
    is-up
    psi
    live-server
    ngrok
    svgexport
    npm-check-updates
    caniuse-cmd
    yo
    generator-np
)

for pkg in "${pkgs[@]}"; do
    echo "Installing $pkg"
    npm i -g $pkg
done
